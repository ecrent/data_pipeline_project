# =============================================================================
# DATA PIPELINE PROJECT ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains environment variables for the entire data pipeline
# Copy this to .env to use with docker-compose

# =============================================================================
# PROJECT METADATA
# =============================================================================
COMPOSE_PROJECT_NAME=data-pipeline
PROJECT_VERSION=1.0.0

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
NETWORK_SUBNET=172.20.0.0/16

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================
KAFKA_BROKER_ID=1
KAFKA_REPLICATION_FACTOR=1
KAFKA_PARTITIONS=3
KAFKA_RETENTION_HOURS=168
KAFKA_RETENTION_BYTES=1073741824
KAFKA_TOPIC_RAW_EVENTS=raw_events

# =============================================================================
# MINIO (DATA LAKE) CONFIGURATION
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_BUCKET_NAME=data-lake
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# =============================================================================
# ELASTICSEARCH CONFIGURATION
# =============================================================================
ELASTICSEARCH_CLUSTER_NAME=pipeline-cluster
ELASTICSEARCH_NODE_NAME=elasticsearch
ELASTICSEARCH_HEAP_SIZE=2g
ELASTICSEARCH_INDEX_PROFILES=customer_profiles

# =============================================================================
# SPARK CONFIGURATION
# =============================================================================
SPARK_MASTER_PORT=7077
SPARK_MASTER_WEBUI_PORT=8080
SPARK_WORKER_WEBUI_PORT=8081
SPARK_WORKER_MEMORY=2G
SPARK_WORKER_CORES=2

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
SOURCE_DATA_FILE=electronics.csv
LOG_LEVEL=INFO
PROCESSING_BATCH_SIZE=1000

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=60s
